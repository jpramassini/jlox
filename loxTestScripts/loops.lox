print "For loop (0 - 9)";
for(var i = 0; i < 10; i = i + 1) print "i: " + i;

print "";

print "While loop (0-9)";
var a = 0;
while(a < 10) {
    var b = 1;      // This is to show block scoping in action.
    print "a: " + a + ", b: " + b;
    a = a + 1;
}
print "Final value of a: " + a; // This is to show global scoping working.

